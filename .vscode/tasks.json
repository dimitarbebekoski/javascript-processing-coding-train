{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mpic++ build active file",
            "type": "shell",
            "command": "/usr/bin/mpic++",
            "args": [
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/bin/connect4",
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}